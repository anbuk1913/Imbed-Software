            align-items: center;
            justify-content: center;
            background-color: #ffffff;
            color: #8CBF3A;
            border: 1px solid #8CBF3A;
            padding: 10px;
            font-weight: bold;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .btn-google:hover {
            background-color: #8CBF3A;
            color: white;
        }

        .google-icon {
            width: 20px;
            height: 20px;
            margin-right: 10px;
        }

        /* Transparent Input Fields */
        .form-control {
            background-color: rgba(0, 0, 0, 0.267);
            /* Transparent background */
            border: 1px solid #8CBF3A;
            /* Green border */
            border-radius: 5px;
            /* Rounded corners */
