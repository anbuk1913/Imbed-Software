    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <style>
        /* General Styles */
        body {
            font-family: 'Source Sans 3', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            color: #333;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Navbar Styles */
        .navbar {
            box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.5);
        }

        .navbar-brand img {
            width: 150px;
        }

        .nav-link {
            color: #333;
            font-weight: 500;
        }

        .nav-link:hover {
            color: #8CBF3A;
        }

        /* Login Section Styles */
        .login-section {
            min-height: 70vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            border: none;
            border-radius: 10px;
            position: relative;
            background-image: url('/images/log.jpg'); /* Background image */
            background-size: cover;
            background-position: center;
        }

        .col-md-4{
            padding: 0px;
            border-radius: 10px;
            box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.5);
        }

        .card-body h5 {
            font-size: 1.5rem;
            font-weight: bold;
            color: #8CBF3A;
        }

        span{
            color: white;
        }

        .form-label {
            color: white;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .btn-success {
            background-color: #8CBF3A;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-success:hover {
            color: black;
            background-color: #94f000;
            border-radius: 20px;
        }

        .text-center span {
            font-size: 0.85rem;
        }

        /* Footer Styles */
        footer {
            background-color: #8CBF3A;
            color: white;
            padding: 2rem 0;
        }

        footer h5 {
            font-size: 1.1rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        footer ul {
            list-style: none;
            padding: 0;
        }

        footer ul li {
            margin-bottom: 0.5rem;
        }

        footer ul li a {
            color: white;
            font-size: 0.9rem;
            transition: color 0.3s ease;
        }

        footer ul li a:hover {
            color: #D4F5E9;
        }

        footer .input-group input {
            border-radius: 5px 0 0 5px;
            border: 1px solid #fff;
            outline: none;
        }

        footer .input-group button {
            border-radius: 0 5px 5px 0;
            border: none;
            background-color: #333;
            color: white;
            font-size: 1rem;
        }

        footer .input-group button:hover {
            background-color: #555;
        }

        footer .text-center {
            margin-top: 2rem;
            font-size: 0.85rem;
        }

        footer .bi-heart-fill {
            color: red;
        }

        /* Google Button Styles */
        .btn-google {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #ffffff;
            color: #8CBF3A;
            border: 1px solid #8CBF3A;
            padding: 10px;
            font-weight: bold;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .btn-google:hover {
            background-color: #8CBF3A;
            color: white;
        }

        .google-icon {
            width: 20px;
            height: 20px;
            margin-right: 10px;
        }
        /* Transparent Input Fields */
        .form-control {
            background-color: rgba(255, 255, 255, 0.5); /* Transparent background */
            border: 1px solid #8CBF3A; /* Green border */
            border-radius: 5px; /* Rounded corners */
            color: #333; /* Text color */
            padding: 0.75rem;
            font-size: 1rem;
        }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.7); /* Slightly less transparent on focus */
            border-color: #45A049; /* Darker green border on focus */
            outline: none; /* Remove default outline */
            box-shadow: 0 0 5px rgba(69, 160, 73, 0.8); /* Green shadow effect */
        }
    </style>
</head>
<body>
