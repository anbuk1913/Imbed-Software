    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script defer>
        $(document).ready(function () {
            // Email validation on blur
            $('#email').on('blur', function () {
                const email = $(this).val().trim();
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    
                if (!email) {
                    $('#email-error').text('*Email is required').show();
                } else if (!emailRegex.test(email)) {
                    $('#email-error').text('*Please enter a valid email address').show();
                } else {
                    $('#email-error').hide();
                }
            });
    
            // Password validation on blur
            $('#password').on('blur', function () {
                const password = $(this).val().trim();
                if (!password) {
                    $('#password-error').text('*Password is required').show();
                } else {
                    $('#password-error').hide();
                }
            });
    
            // Form submission validation
            $('#login').submit(async function (event) {
                event.preventDefault(); // Prevent form reload
    
                const email = $('#email').val().trim();
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                const password = $('#password').val().trim();
                let valid = true;
    
                // Validate email
                if (!email) {
                    $('#email-error').text('*Email is required').show();
                    valid = false;
                } else if (!emailRegex.test(email)) {
                    $('#email-error').text('*Please enter a valid email address').show();
                    valid = false;
                } else {
                    $('#email-error').hide();
                }
    
                // Validate password
                if (!password) {
                    $('#password-error').text('*Password is required').show();
                    valid = false;
                } else {
                    $('#password-error').hide();
                }
    
                // Proceed only if the form is valid
                if (valid) {
                    let formData = {
                        email: $('#email').val(),
                        password: $('#password').val()
                    };
    
                    try {
                        let response = await fetch('/login', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(formData)
                        });
                        const result = await response.json();
                        const toastContainer = document.querySelector(".toast-container");
                        const toast = document.createElement("div");
                        toast.className = "toast";
                        if (result.success==false) {
                            toast.textContent = "Incorrect Email or Password!";
                            toast.style.backgroundColor = "#dc3545"; // Red color for error
                            toastContainer.appendChild(toast);
                            setTimeout(() => {
                                toast.style.display = "block";
                            }, 100);

                            setTimeout(() => {
                                toast.style.animation = "slideOutToRight 0.8s ease-out forwards";
                            }, 3000);

                            setTimeout(() => {
                                toast.style.display = "none";
                                toast.remove(); // Remove toast from DOM
                            }, 3800);
                        } else {
                            // Redirect on successful login
                            window.location.href = "/";
                        }
                    } catch (error) {
                        console.error("Login error:", error);
                    }
                }
            });
        });
    </script>
    
