        /* General Styles */
        body {
            font-family: 'Source Sans 3', sans-serif;
            margin: 0;
            padding: 0;
            background-image: url('/images/lo.jpg');
            background-repeat: no-repeat;
            color: #333;
            background-size: cover;
            background-position: center;
