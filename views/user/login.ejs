    <!-- Login Section -->
    <div class="login-section py-5" style="background-color: #f5f5f5;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="card p-4 shadow">
                        <div class="card-body">
                            <!-- Logo -->
                            <div class="text-center mb-4">
                                <img src="/images/logo.png" alt="Logo" style="width: 30px; height: auto;"><br>
                                <img src="/images/logofont.png" alt="IMBED SOFTWARE" style="width: 200px; height: auto;">
                            </div>
                            
                            <form id="login" action="/login" method="POST">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" name="email">
                                    <div id="email-error" class="text-danger" style="display:none;"></div>
                                </div>
                                <div class="mb-3">
