<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop - Imbed Software</title>
    <link rel="icon" href="/images/logo.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <style>
        /* Flexbox layout for responsiveness */
        body {
            font-family: 'Source Sans 3', sans-serif;
            margin: 0;
            background-color: #d3d2d1;
            padding: 0;
            box-sizing: border-box;
        }

        /* Navbar */
        .navbar {
            width: 100%;
            padding: 15px 0;
            box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.5);
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: #8CBF3A;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
            color: #555;
            font-size: 1rem;
            margin: 0 10px;
        }

        .navbar-nav .nav-link:hover {
            color: #8CBF3A;
        }

        aside {
            position: fixed;
            top: 60px;
            /* Adjust based on header height */
            left: 0;
            padding: 10px;
            padding-top: 30px;
            height: calc(100vh - 60px);
            /* Full height minus header */
            overflow-y: auto;
            background-color: #f8f8f8;
            border-right: 1px solid #ddd;
        }

        main {
            margin-left: 22%;
            /* Adjust according to the aside width */
        }

        .search-product{
            margin: 15px 0px;
            height: 28px;
            width: 150px;
        }

        .sort-item{
            margin: 5px 0px;
        }

        main {
            width: 75%;
            padding: 20px;
        }

        strong{
            color: black;
        }

        del {
            color: #999;
        }
        
        footer {
            background-color: #8bc34a;
            padding: 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        footer div {
            width: 30%;
            margin-bottom: 20px;
        }

        aside ul {
            list-style-type: none;
            padding: 0;
        }

        .reset-button{
            color: white;
            border: 0.3px solid #555;
            background-color: #585858;
            border-radius: 5px;
        }

        .continue-button{
            color: #262626;
            margin-left: 15px;
            border: 0.3px solid #555;
            background-color: #94f000;
            border-radius: 5px;
        }

        .product-item img {
            width: 100%;
            aspect-ratio: 1 / 1;
            object-fit: cover;
            /* Ensures the image covers the space without distortion */
            border-radius: 5px;
            /* Optional: smooth corners */
            height: 200px;
            object-fit: cover;
        }

        .product-name{
            color: #7fa73f;
            padding-top: 5px;
            font-size: 1rem;
        }

        .product-grid {
            padding-top: 100px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 20px;
            max-width: 1200px; /* Limits the width */
            margin: 0 auto;    /* Centers the grid */
        }

        .product-item {
            width: 200px;
            border-radius: 3px;
            background-color: #e4e4e4;
            border: 1px solid #a7a7a7;
            text-align: center;
            padding: 10px;
            border: 1px solid #ddd;
            transition: transform 0.3s;
        }

        .product-item:hover {
            cursor: pointer;
            transform: scale(1.05); /* Optional: subtle hover effect */
            box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.5);
        }

        @media (max-width: 768px) {
            .product-grid {
                grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
                gap: 10px;
            }
        }

        @media (max-width: 768px) {

            aside,
            main {
                width: 100%;
                padding: 10px;
            }

            footer div {
                width: 100%;
            }
        }

        /* Loading Animation */
        .loadingspinner {
            --square: 26px;
            --offset: 30px;
            --duration: 2.4s;
            --delay: 0.2s;
            --timing-function: ease-in-out;
            --in-duration: 0.4s;
            --in-delay: 0.1s;
            --in-timing-function: ease-out;
            width: calc(3 * var(--offset) + var(--square));
            height: calc(2 * var(--offset) + var(--square));
            padding: 0px;
            margin-left: auto;
            margin-right: auto;
            margin-top: 10px;
            margin-bottom: 30px;
            position: relative;
        }

        .loadingspinner div {
            display: inline-block;
            background: #8CBF3A;
            border: none;
            border-radius: 2px;
            width: var(--square);
            height: var(--square);
            position: absolute;
            padding: 0px;
            margin: 0px;
            font-size: 6pt;
            color: black;
        }

        .loadingspinner #square1 {
            left: calc(0 * var(--offset));
            top: calc(0 * var(--offset));
            animation: square1 var(--duration) var(--delay) var(--timing-function) infinite,
                       squarefadein var(--in-duration) calc(1 * var(--in-delay)) var(--in-timing-function) both;
        }

        .loadingspinner #square2 {
            left: calc(0 * var(--offset));
            top: calc(1 * var(--offset));
            animation: square2 var(--duration) var(--delay) var(--timing-function) infinite,
                       squarefadein var(--in-duration) calc(1 * var(--in-delay)) var(--in-timing-function) both;
        }

        .loadingspinner #square3 {
            left: calc(1 * var(--offset));
            top: calc(1 * var(--offset));
            animation: square3 var(--duration) var(--delay) var(--timing-function) infinite,
                       squarefadein var(--in-duration) calc(2 * var(--in-delay)) var(--in-timing-function) both;
        }

        .loadingspinner #square4 {
            left: calc(2 * var(--offset));
            top: calc(1 * var(--offset));
            animation: square4 var(--duration) var(--delay) var(--timing-function) infinite,
                       squarefadein var(--in-duration) calc(3 * var(--in-delay)) var(--in-timing-function) both;
        }

        .loadingspinner #square5 {
            left: calc(3 * var(--offset));
            top: calc(1 * var(--offset));
            animation: square5 var(--duration) var(--delay) var(--timing-function) infinite,
                       squarefadein var(--in-duration) calc(4 * var(--in-delay)) var(--in-timing-function) both;
        }

        @keyframes square1 {
            0% {
                left: calc(0 * var(--offset));
                top: calc(0 * var(--offset));
            }

            8.333% {
                left: calc(0 * var(--offset));
                top: calc(1 * var(--offset));
            }

            100% {
                left: calc(0 * var(--offset));
                top: calc(1 * var(--offset));
            }
        }

        @keyframes square2 {
            0% {
                left: calc(0 * var(--offset));
                top: calc(1 * var(--offset));
            }

            8.333% {
                left: calc(0 * var(--offset));
                top: calc(2 * var(--offset));
            }

            16.67% {
                left: calc(1 * var(--offset));
                top: calc(2 * var(--offset));
            }

            25.00% {
                left: calc(1 * var(--offset));
                top: calc(1 * var(--offset));
            }

            83.33% {
                left: calc(1 * var(--offset));
                top: calc(1 * var(--offset));
            }

            91.67% {
                left: calc(1 * var(--offset));
                top: calc(0 * var(--offset));
            }

            100% {
                left: calc(0 * var(--offset));
                top: calc(0 * var(--offset));
            }
        }

        @keyframes square3 {
            0%, 100% {
                left: calc(1 * var(--offset));
                top: calc(1 * var(--offset));
            }

            16.67% {
                left: calc(1 * var(--offset));
                top: calc(1 * var(--offset));
            }

            25.00% {
                left: calc(1 * var(--offset));
                top: calc(0 * var(--offset));
            }

            33.33% {
                left: calc(2 * var(--offset));
                top: calc(0 * var(--offset));
            }

            41.67% {
                left: calc(2 * var(--offset));
                top: calc(1 * var(--offset));
            }

            66.67% {
                left: calc(2 * var(--offset));
                top: calc(1 * var(--offset));
            }

            75.00% {
                left: calc(2 * var(--offset));
                top: calc(2 * var(--offset));
            }

            83.33% {
                left: calc(1 * var(--offset));
                top: calc(2 * var(--offset));
            }

            91.67% {
                left: calc(1 * var(--offset));
                top: calc(1 * var(--offset));
            }
        }

        @keyframes square4 {
            0% {
                left: calc(2 * var(--offset));
                top: calc(1 * var(--offset));
            }

            33.33% {
                left: calc(2 * var(--offset));
                top: calc(1 * var(--offset));
            }

            41.67% {
                left: calc(2 * var(--offset));
                top: calc(2 * var(--offset));
            }

            50.00% {
                left: calc(3 * var(--offset));
                top: calc(2 * var(--offset));
            }

            58.33% {
                left: calc(3 * var(--offset));
                top: calc(1 * var(--offset));
            }

            100% {
                left: calc(3 * var(--offset));
                top: calc(1 * var(--offset));
            }
        }

        @keyframes square5 {
            0% {
                left: calc(3 * var(--offset));
                top: calc(1 * var(--offset));
            }

            50.00% {
                left: calc(3 * var(--offset));
                top: calc(1 * var(--offset));
            }

            58.33% {
                left: calc(3 * var(--offset));
                top: calc(0 * var(--offset));
            }

            66.67% {
                left: calc(2 * var(--offset));
                top: calc(0 * var(--offset));
            }

            75.00% {
                left: calc(2 * var(--offset));
                top: calc(1 * var(--offset));
            }

            100% {
                left: calc(2 * var(--offset));
                top: calc(1 * var(--offset));
            }
        }

        @keyframes squarefadein {
            0% {
                transform: scale(0.75);
                opacity: 0.0;
            }

            100% {
                transform: scale(1.0);
                opacity: 1.0;
            }
        }

        /* Hide the loading spinner by default */
        #loading-spinner {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            z-index: 9999;
            justify-content: center;
            align-items: center;
        }

    </style>
</head>

<body>
    <!-- Loading Spinner -->
    <div id="loading-spinner">
        <div class="loadingspinner">
            <div id="square1"></div>
            <div id="square2"></div>
            <div id="square3"></div>
            <div id="square4"></div>
            <div id="square5"></div>
        </div>
    </div>

    <!-- Header Section -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="/images/logo.png" style="width: 30px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="" style="color: #8CBF3A;">Shop</a></li>
                        <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
                        <li class="nav-item"><a class="nav-link" href="/wishlist">Wishlist</a></li>
                    </ul>
                    <!-- User Profile Section -->
                    <div class="dropdown ms-3">
                        <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle"
                            id="userProfileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <% if(name){ %>
                                <img src="/images/profile.png"
                                    style="width: 30px; height: 30px; border-radius: 50%;">
                                <span class="ms-2">
                                    <%= name %>
                                </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userProfileDropdown">
                            <li><a class="dropdown-item" href="/profile">My Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href=""
                                    onclick="document.getElementById('logoutForm').submit(); return false;">Logout</a>
                            </li>
                            <form id="logoutForm" action="/logout" method="post" style="display: none;"></form>
                        </ul>
                        <% } else {%>
                            <img src="/images/profile.png" style="width: 30px; height: 30px; border-radius: 50%;">
                            <span class="ms-2">
                                <%= name %>
                            </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userProfileDropdown">
                                <li><a class="dropdown-item" href="/login">Log In</a></li>
                            </ul>
                            <% } %>
                    </div>
                    <!-- End of User Profile Section -->
                </div>
            </div>
        </nav>
    </header>

    <div style="display: flex; flex-wrap: wrap;">
        <!-- Filters -->
        <aside>
            <h3>Product Categories</h3>
            <input type="text" class="search-product" id="product-search" placeholder="Search products...">
            <br>
            <select id="sort-options" class="sort-item">
                <option value="default">Sort By</option>
                <option value="low-high">Price: Low to High</option>
                <option value="high-low">Price: High to Low</option>
                <option value="new-arrivals">New Arrivals</option>
                <option value="a-z">A - Z</option>
                <option value="z-a">Z - A</option>
            </select>

            <form id="filter">
                <ul>
                    <% categories.forEach(category=> { %>
                        <li><input type="checkbox"><%= category.categoryName %></li>    
                    <% }); %>
                </ul>
                <h3>Price Range</h3>
                <ul>
                    <li><input type="radio" name="price"> Below ₹250</li>
                    <li><input type="radio" name="price"> ₹250 - ₹500</li>
                    <li><input type="radio" name="price"> ₹500 - ₹1000</li>
                    <li><input type="radio" name="price"> ₹1000 - ₹2000</li>
                    <li><input type="radio" name="price"> Above ₹2000</li>
                </ul>

                <button class="reset-button">RESET</button>
                <!-- <button class="continue-button">CONTINUE</button> -->
            </form>
        </aside>

        <!-- Product Grid -->
        <main>
            <div class="product-grid">
                <% products.forEach(product=> { %>
                    <% if(product?.isListed && product?.productCategoryId?.isListed){ %>
                        <a href="/product/<%= product._id %>" style="text-decoration: none;"><div class="product-item">
                            <img src="<%= product.productImage1 %>" alt="<%= product.productName %>">
                            <h5 class="product-name"><%= product.productName %></h5>
                            <p style="font-size: 0.8rem;color: black;"><%= product.productCategoryId.categoryName %></p>
                            <% if(product.productOfferPrice){ %>
                                <strong>₹<%= product.productOfferPrice %></strong>
                                <del>₹<%= product.productPrice %></del>
                            <% } else { %>
                                <strong>₹<%= product.productPrice %></strong>
                            <% } %>
                            <% if(product.productStock==0) { %>
                                <p style="color: red;">Out of stack</p>
                            <% } else if(product.productStock<=10) { %>
                                <p style="color: red;">Only <%= product.productStock %> Stocks left</p>
                            <% } else { %>
                                <p style="color: red;"></p>
                            <% } %>
                        </div></a>
                    <% } %>
                <% }) %>
            </div>
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Footer -->
    <footer>
        <div>
            <h4>Contact Us</h4>
            <p>London, UK - 1259</p>
            <p>Phone: 020 8365 2462</p>
            <p>FAX: 020 7865 369652</p>
            <p>Email: support@example.com</p>
        </div>

        <div>
            <h4>Information</h4>
            <p>Your Account</p>
            <p>Free Shipping Policy</p>
            <p>Return Policy</p>
        </div>

        <div>
            <h4>Download Our App</h4>
            <a href=""><img src="/images/playstore.webp" alt="App Stores" style="max-width: 100px;"></a>
            <a href=""><img src="/images/appstore.png" alt="App Stores" style="max-width: 110px;margin-left: 20px;"></a>
        </div>
    </footer>
    <script>
        // Show loading spinner
        document.getElementById('loading-spinner').style.display = 'flex';

        // Hide loading spinner when the page is fully loaded
        window.addEventListener('load', function() {
            document.getElementById('loading-spinner').style.display = 'none';
        });

        // Your existing JavaScript for filters and sorting
        document.addEventListener("DOMContentLoaded", () => {
            const filterForm = document.getElementById("filter");
            const productGrid = document.querySelector(".product-grid");
            const searchInput = document.getElementById("product-search");
            const sortSelect = document.getElementById("sort-options");

            filterForm.addEventListener("change", applyFilters);
            searchInput.addEventListener("input", applyFilters);
            sortSelect.addEventListener("change", applyFilters);

            filterForm.querySelector(".reset-button").addEventListener("click", (e) => {
                e.preventDefault();
                filterForm.reset();
                searchInput.value = "";
                sortSelect.value = "default";
                applyFilters();
            });

            function applyFilters() {
                const searchText = searchInput.value.toLowerCase();
                const selectedCategories = Array.from(filterForm.querySelectorAll("input[type=checkbox]:checked"))
                    .map(input => input.parentElement.textContent.trim());
                const selectedPrice = filterForm.querySelector("input[name=price]:checked")?.nextSibling.textContent.trim();
                const sortBy = sortSelect.value;

                let products = Array.from(document.querySelectorAll(".product-item"));

                products.forEach(product => {
                    const productCategory = product.querySelector(".product-name").nextElementSibling.textContent.trim();
                    const productPrice = parseInt(product.querySelector("strong").textContent.replace("₹", ""));
                    const productName = product.querySelector(".product-name").textContent.trim().toLowerCase();
                    const productLink = product.closest("a"); // Get the closest <a> tag

                    let categoryMatch = selectedCategories.length === 0 || selectedCategories.includes(productCategory);
                    let priceMatch = checkPriceRange(productPrice, selectedPrice);
                    let searchMatch = searchText === "" || productName.includes(searchText);

                    if (categoryMatch && priceMatch && searchMatch) {
                        productLink.style.visibility = "visible";
                        productLink.style.position = "relative";
                        productLink.style.display = "inline-block"; // Ensure the link remains active
                    } else {
                        productLink.style.visibility = "hidden";
                        productLink.style.position = "absolute";
                        productLink.style.display = "none";
                    }
                });

                sortProducts(products, sortBy);
            }

            function checkPriceRange(price, selectedPrice) {
                if (!selectedPrice) return true;
                if (selectedPrice.includes("Below ₹250")) return price < 250;
                if (selectedPrice.includes("₹250 - ₹500")) return price >= 250 && price <= 500;
                if (selectedPrice.includes("₹500 - ₹1000")) return price >= 500 && price <= 1000;
                if (selectedPrice.includes("₹1000 - ₹2000")) return price >= 1000 && price <= 2000;
                if (selectedPrice.includes("Above ₹2000")) return price > 2000;
                return true;
            }

            function sortProducts(products, sortBy) {
                let sortedProducts = [...products];

                if (sortBy === "low-high") {
                    sortedProducts.sort((a, b) => 
                        parseInt(a.querySelector("strong").textContent.replace("₹", "")) - 
                        parseInt(b.querySelector("strong").textContent.replace("₹", ""))
                    );
                } else if (sortBy === "high-low") {
                    sortedProducts.sort((a, b) => 
                        parseInt(b.querySelector("strong").textContent.replace("₹", "")) - 
                        parseInt(a.querySelector("strong").textContent.replace("₹", ""))
                    );
                } else if (sortBy === "a-z") {
                    sortedProducts.sort((a, b) => 
                        a.querySelector(".product-name").textContent.trim()
                        .localeCompare(b.querySelector(".product-name").textContent.trim())
                    );
                } else if (sortBy === "z-a") {
                    sortedProducts.sort((a, b) => 
                        b.querySelector(".product-name").textContent.trim()
                        .localeCompare(a.querySelector(".product-name").textContent.trim())
                    );
                } else if (sortBy === "new-arrivals") {
                    sortedProducts.sort((a, b) => 
                        new Date(b.getAttribute("data-created")) - 
                        new Date(a.getAttribute("data-created"))
                    );
                }

                productGrid.innerHTML = "";
                sortedProducts.forEach(product => productGrid.appendChild(product.closest("a")));
            }
        });
    </script>
</body>
</html>