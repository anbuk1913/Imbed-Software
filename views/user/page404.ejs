<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found</title>
    <link rel="icon" href="/images/logo.png">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: #000;
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            overflow: hidden;
            position: relative;
        }
        
        .star-trails {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            background: radial-gradient(ellipse at center, rgba(0,0,0,0.7) 0%, rgba(0,0,0,1) 70%);
        }
        
        .star-trail {
            position: absolute;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
        }
        
        .content {
            position: relative;
            z-index: 1;
            text-align: center;
            max-width: 90%;
        }
        
        .error-code {
            font-size: 7rem;
            font-weight: bold;
            margin: 0;
            letter-spacing: 2px;
        }
        
        .error-message {
            font-size: 1.5rem;
            margin: 1rem 0 2rem;
        }
        
        .search-box {
            position: relative;
            margin: 2rem auto;
            width: 100%;
            max-width: 400px;
        }
        
        .search-input {
            width: 100%;
            padding: 10px 40px 10px 15px;
            border-radius: 4px;
            border: none;
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
            font-size: 1rem;
            outline: none;
            box-sizing: border-box;
        }
        
        .search-button {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #fff;
            cursor: pointer;
        }
        
        .home-link {
            color: #fff;
            text-decoration: underline;
            font-size: 1rem;
        }
        
        .home-link:hover {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="star-trails" id="star-trails"></div>
    
    <div class="content">
        <h1 class="error-code">404</h1>
        <p class="error-message">Sorry, we were unable to find that page</p>
        
        <p>Start from <a href="/" class="home-link">home page</a></p>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const starTrailsContainer = document.getElementById('star-trails');
            const numberOfStars = 200;
            
            // Create star trails
            for (let i = 0; i < numberOfStars; i++) {
                createStarTrail(starTrailsContainer);
            }
            
            // Function to create a single star trail
            function createStarTrail(container) {
                const trail = document.createElement('div');
                trail.classList.add('star-trail');
                
                // Random position
                const x = Math.random() * 100;
                const y = Math.random() * 100;
                
                // Random size
                const size = Math.random() * 2 + 0.5;
                
                // Random opacity
                const opacity = Math.random() * 0.5 + 0.2;
                
                // Random length for the trail
                const length = Math.random() * 150 + 50;
                
                // Set the styles
                trail.style.left = `${x}%`;
                trail.style.top = `${y}%`;
                trail.style.width = `${size}px`;
                trail.style.height = `${length}px`;
                trail.style.opacity = opacity;
                
                // Random rotation
                const rotation = Math.random() * 360;
                trail.style.transform = `rotate(${rotation}deg)`;
                
                // Add to container
                container.appendChild(trail);
            }
            
            // Optional: add slight animation to make it feel more alive
            function animateStarTrails() {
                const trails = document.querySelectorAll('.star-trail');
                trails.forEach(trail => {
                    const currentRotation = parseFloat(trail.style.transform.replace('rotate(', '').replace('deg)', ''));
                    const newRotation = currentRotation + 0.01;
                    trail.style.transform = `rotate(${newRotation}deg)`;
                });
                
                requestAnimationFrame(animateStarTrails);
            }
            
            animateStarTrails();
        });
    </script>
</body>
</html>