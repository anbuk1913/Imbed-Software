    .toast-container {
      position: fixed;
      top: 20px;
      right: 20px;
      z-index: 9999;
    }

    .toast {
      display: none;
      background-color: #ff6600;
      color: white;
      padding: 15px 30px;
      border-radius: 12px;
      font-size: 16px;
      text-align: center;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
      opacity: 0;
      transform: translateX(100%);
      animation: slideInFromRight 0.8s ease-out forwards;
    }

    @keyframes slideInFromRight {
      0% {
        opacity: 0;
        transform: translateX(100%);
      }

      100% {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes slideOutToRight {
      0% {
        opacity: 1;
        transform: translateX(0);
      }

      100% {
        opacity: 0;
        transform: translateX(100%);
      }
    }

