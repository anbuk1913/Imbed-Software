<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Report</title>
    <link rel="icon" href="/images/logo.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Afacad+Flux:wght@100..1000&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            font-family: "Afacad Flux", sans-serif;
            font-weight: 700;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            transition: background-color 0.3s, color 0.3s;
        }

        body {
            background-color: #f8f9fa;
            color: #212529;
        }


        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            padding: 20px;
            background-color: #343a40;
            color: #fff;
            text-align: center;
        }

        .footer {
            padding: 10px;
            background-color: #343a40;
            color: #fff;
            text-align: center;
            margin-top: 20px;
        }

        .table {
            margin-top: 20px;
        }

        .table th {
            background-color: #343a40;
            color: #fff;
        }

        .btn-group {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .btn-group .btn {
            flex: 1;
        }

        .filter-section {
            background-color: #fff;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .filter-section .form-control,
        .filter-section .form-select {
            border-radius: 5px;
            border: 1px solid #ddd;
            padding: 8px;
            font-size: 14px;
        }

        .filter-section .btn {
            border-radius: 5px;
            padding: 8px 12px;
            font-weight: 600;
            font-size: 14px;
        }

        .filter-section .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .filter-section .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

        .filter-section .btn-outline-secondary {
            border-color: #6c757d;
            color: #6c757d;
        }

        .filter-section .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: #fff;
        }

    </style>
</head>
<body>
    <%- include('../adminPartials/header') %>
    <div class="container mt-4">
        <!-- Download Buttons -->
        <div class="btn-group">
            <button class="btn btn-info">Download (PDF)</button>
            <button class="btn btn-info">Download (xlsx)</button>
        </div>

        <!-- Filter Section -->
        <div class="filter-section d-flex justify-content-center">
            <div class="row g-2 align-items-center d-flex flex-wrap">
                <form id="date-wise-filter" class="d-flex gap-2 align-items-center">
                    <input type="date" class="form-control" placeholder="From" id="startDate">
                    <input type="date" class="form-control" placeholder="To" id="endDate">
                    <button class="form-control btn btn-success">Apply Date</button>
                </form>
                <form id="plan-view" class="d-flex gap-2 align-items-center">
                    <select class="form-select form-control">
                        <option selected disabled>Select</option>
                        <option value="week">Week</option>
                        <option value="month">Month</option>
                        <option value="year">Year</option>
                    </select>
                    <button class="btn btn-success">Filter</button>
                </form>
                <button class="btn btn-outline-secondary">Clear Filters</button>
            </div>
        </div>

        <!-- Sales Table -->
        <table class="table table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>S.No</th>
                    <th>Name</th>
                    <th>Delivery Date</th>
                    <th>No of Products</th>
                    <th>Total Cost</th>
                    <th>Payment Method</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach((order, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= order.fullName %></td>
                        <td><%= order.deliveryDate.toISOString().split('T')[0]; %></td>
                        <td><%= order.products.length %></td>
                        <td>â‚¹<%= order.priceDetails.total %></td>
                        <td><%= order.paymentMethod %></td>
                        <td><%= order.status %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <%- include('../adminPartials/footer') %>
    <script>
        let startDate = document.getElementById("startDate");
        let endDate = document.getElementById("endDate");

        startDate.addEventListener("change", function () {
            let startDateValue = startDate.value;
            endDate.setAttribute("min", startDateValue);
        });

        endDate.addEventListener("change", function () {
            let endDateValue = endDate.value;
            startDate.setAttribute("max", endDateValue);
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>